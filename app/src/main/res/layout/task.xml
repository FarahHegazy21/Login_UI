<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/but1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/teal_200"
        android:text="BUTTON"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"></Button>

    <Button
        android:id="@+id/but2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/but1"
        android:layout_alignStart="@id/but1"
        android:background="@color/purple_700"></Button>
    <Button
        android:id="@+id/but3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/but1"
        android:layout_toEndOf="@id/but1"
        android:background="@color/purple_700"></Button>

    <Button
        android:id="@+id/but4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/but1"
        android:layout_toStartOf="@id/but1"
        android:background="@color/purple_700"></Button>

    <Button
        android:id="@+id/but5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/but1"
        android:layout_alignEnd="@id/but1"
        android:background="@color/purple_700"></Button>

</RelativeLayout>